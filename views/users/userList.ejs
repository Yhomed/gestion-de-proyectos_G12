<!-- DETALLE DEL USUARIO -->
<!DOCTYPE html>
<html lang="en">
<head>

    <%- include('../partials/head.ejs') %>

    <link href="../css/userList.css" rel="stylesheet">

</head>
<body>

    <header>

        <%- include('../partials/header.ejs') %>
    
    </header>


<!-- MAIN -->

    <main>

        <h2>USUARIOS</h2>
        
        <!--recorre el usuario con for(){}-->
        <% for (let i=0; i<longitud; i++){ %>
            <article class = "contenedor">
                
               <h3>Foto De Perfil</h3> 
                <div class = "imagen-cursos">
                    <img src="/img/users/<%= usuarios[i].image %>" alt="usuarios-img" width="50%">
                </div>


            <div class="nombre-apellido">
                <div class="nombre">
                    <h3 class = ""><%= usuarios[i].name %></h3>
                </div>
                
                <div class = "apellido">
                    <h3> <%= usuarios[i].surname %></h3> 
                </div>

            </div>


                <div class="email">
                    <h3 class = ""><%= usuarios[i].email %></h3>
                </div>



            </article>

        <% } %>
          
    </main>
    
    <!-- /MAIN -->
    
    <footer>

        <%- include('../partials/footer.ejs') %>
    
    </footer>
</body>
</html>