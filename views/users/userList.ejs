<!-- DETALLE DEL USUARIO -->
<!DOCTYPE html>
<html lang="en">
<head>

    <%- include('../partials/head.ejs') %>

    <link href="../css/productDetail.css" rel="stylesheet">

</head>
<body>

    <header>

        <%- include('../partials/header.ejs') %>
    
    </header>


<!-- MAIN -->

    <main>

        <h2>USUARIOS</h2>
        
        <!--recorre el usuario con for(){}-->
        <% for (let i=0; i<longitud; i++){ %>
            <article class = "">
                <div class="">
                    <h3 class = ""><%= usuarios[i].name %></h3>
                </div>
                
                <div class = "">
                    <p> <%= usuarios[i].surname %></p> 
                </div>
                <div class="">
                    <h3 class = ""><%= usuarios[i].email %></h3>
                </div>
                <div class = "imagen-cursos">
                    <img src="/img/users/<%= usuarios[i].image %>" alt="usuarios-img" width="50%">
                </div>
            </article>
        <% } %>
          
    </main>
    
    <!-- /MAIN -->
    
    <footer>

        <%- include('../partials/footer.ejs') %>
    
    </footer>
</body>
</html>