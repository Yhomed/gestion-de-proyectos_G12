<!-- FORMULARIO DE REGISTRO -->

<!DOCTYPE html>
<html lang="en">
<head>

    <%- include('../partials/head.ejs') %>

    <link href="/css/formularios.css" rel="stylesheet">
    
</head>


<body>

    <header>

        <%- include('../partials/header.ejs') %>

    </header>



    <main>

        <div><ul id="errores"></ul></div>

        
        <!-- FORMULARIO DE REGISTRO -->
        <form action="/user/" method="POST" enctype="multipart/form-data" class="form">
            <!-- <form action="/" method="GET"> -->

            <h2>Crea tu cuenta</h2>

            <!-- IMAGEN -->
            <div>
                <label class="etiqueta">Imagen: </label>
                <input type = "file" name="image" required class="campo-de-texto">
                <span class="feedback"></span> <!-- para alertar errores -->
            </div>

            <!-- NOMBRE -->
            <div>
                <label class="etiqueta">Nombre: </label>
                <input type = "text" name="name" placeholder="Ingresa tu nombre" required class="campo-de-texto">
                <span class="feedback"></span> <!-- para alertar errores -->
            </div>

             <!-- APELLIDOS -->
             <div>
                <label class="etiqueta">Apellidos: </label>
                <input type = "text" name="surname" placeholder="Ingresa tus apellidos" required class="campo-de-texto">
                <span class="feedback"></span> <!-- para alertar errores -->
            </div>

            <!-- EMAIL -->
            <div>
                <label class="etiqueta">Email: </label>
                <input type = "email" name="email"  placeholder="usuario@abc.com" required class="campo-de-texto">
                <span class="feedback"></span> <!-- para alertar errores -->
            </div>

            <!-- CONTRASEÑA -->
            <div>
                <label class="password"> Contraseña: </label>
                <input type = "password" name = "password" required class="campo-de-texto">
                <span class="feedback"></span> 
            </div>

            <% if(typeof(errors) != 'undefined'){%>
                <ul class="text-danger">
                   <% errors.forEach(error => { %>
                      <li><%= error.msg%></li>
                   <%});%>
                 </ul>
             <%}%>  

            <!--  CONFIRMAR CONTRASEÑA
            <div>
                <label class="password">Confirmar Contraseña: </label>
                <input type = "password" name = "password" required class="campo-de-texto">
                <span class="feedback"></span> 
            </div> -->
            
            <!-- BOTON BORRAR -->
            <button type="reset">Borrar</button>

            <!-- BOTON ENVIAR -->
            <button type="submit">Enviar</button>
            
            <!-- <button type="submit" value="Enviar" name="submit">Enviar</button> -->
        
        </form>

    </main>

    <footer>

        <%- include('../partials/footer.ejs') %>     
   
    </footer>
</body>
</html>

