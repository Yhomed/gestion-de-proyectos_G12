<!-- FORMULARIO DE DELETE DEL REGISTRO -->

<!DOCTYPE html>
<html lang="en">
<head>

    <%- include('../partials/head.ejs') %>

    <link href="/css/formularios.css" rel="stylesheet">
    
</head>


<body>

    <header>

        <%- include('../partials/header.ejs') %>

    </header>



    <main>

        <!-- FORMULARIO DE REGISTRO -->
        <form action="/user/<%= usuario.id %>?_method=DELETE" method="POST" enctype="multipart/form-data">
            <!-- <form action="/" method="GET"> -->

            <h2>Editar cuenta</h2>

            <!-- IMAGEN -->
            <div>
                <img src="/img/users/<%= usuario.image %>" alt="usuarios-img" width="50%">
                <span class="feedback"></span> <!-- para alertar errores -->
            </div>

            <!-- NOMBRE -->
            <div>
                <label class="etiqueta">Nombre: <%= usuario.name %></label>
                <span class="feedback"></span> <!-- para alertar errores -->
            </div>

             <!-- APELLIDOS -->
             <div>
                <label class="etiqueta">Apellidos: <%= usuario.surname %></label>
                <span class="feedback"></span> <!-- para alertar errores -->
            </div>

            <!-- EMAIL -->
            <div>
                <label class="etiqueta">Email: <%= usuario.email %></label>
                <span class="feedback"></span> <!-- para alertar errores -->
            </div>


            <!-- BOTON BORRAR -->
            <button type="submit">Borrar</button>
            
            <!-- <button type="submit" value="Enviar" name="submit">Enviar</button> -->
        
        </form>

    </main>

    <footer>

        <%- include('../partials/footer.ejs') %>     
   
    </footer>
</body>
</html>