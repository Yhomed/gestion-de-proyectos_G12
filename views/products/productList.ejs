<!-- DETALLE DEL PRODUCTO -->
<!DOCTYPE html>
<html lang="en">
<head>

    <%- include('../partials/head.ejs') %>

    <link href="../css/productDetail.css" rel="stylesheet">

</head>
<body>

    <header>

        <%- include('../partials/header.ejs') %>
    
    </header>


<!-- MAIN -->

    <main>

        <h2>RUTA DE APRENDIZAJE</h2> <!-- RUTA -->

        <!--recorrer el product con forEach()-->
        <% for (let i=0; i<4; i++){ %>

            <article class = "curso">
                <div class="numero-y-titulo">
                    <h3 class = "numero"><%= number[i] %></h3> <!-- curso0.html (/curso0) -->
                    <!-- <a href="/curso0"> --><h3 class = "titulo"><%= title[i] %></h3><!-- </a> -->
                </div>
                <div class = "llevar-al-carrito"><a href="/productCar"><i class="fa-solid fa-cart-shopping carrito"></i></a></div>
                <div class = "descripcion">
                    <p><%= parrafo %></p> 
                </div>
            </article>

        <% } %>
          
    </main>
    
    <!-- /MAIN -->
    
    <footer>

        <%- include('../partials/footer.ejs') %>
    
    </footer>
</body>
</html>